pico-8 cartridge // http://www.pico-8.com
version 38
__lua__

max_speed = 1.5
cartdata("keith_jumper")

function _init()
 hi_score = dget(0)
 if (hi_score == nil) then
 	hi_score = 0
 end
 needs_missing_map = true
 player = {
  x = 64,
  y = 64,
  dx = 0,
  dy = 0,
  jump = 1,
  on_ground = false,
  dead = false,
  dist = 0
 }
 wall = {
  x = 0,
  dx = 0.5
 }
 gen_map(true)
end

function _draw()
 cls()
 camera(player.x-24,0)
 map()
 -- draw evil wall
 for i=0,15 do
  spr(7,wall.x,i*8)
 end
 if (player.dead) then
  camera()
  print("dead!",50,60)
  print("press 🅾️ to try again",20,68)
 else
  spr(0,player.x,player.y)
 end
 -- hud
 camera()
 local score = max(flr(player.dist/8),0)
 if (score > hi_score) then
  hi_score = score
 end 
 print("score",0,0,10)
 print(score,26,0,7)
 print("hi",50,0,10)
 print(hi_score,66,0,7)
end

function _update60()
 local p = player
 -- already dead
 if p.dead then
  if (btnp(🅾️)) then
   _init()
  end
  return
 end
 -- apply death
 if hit(p.x,p.y,7,7,2) or
  hit_spr(p.x,p.y,wall.x,p.y) then
  p.dead=true
  dset(0,hi_score)
  return
 end
 -- apply gravity
 p.dy=p.dy+0.05
 -- up/ down
 if (btn(➡️)) then
  p.dx=p.dx+0.05
 end
 if (btn(⬅️)) then
  p.dx=p.dx-0.05
 end 

 -- jump
 if btnp(🅾️) and 
   (p.on_ground or p.jump<1) then
   p.on_ground=false
   p.jump+=1
   p.dy=p.dy-2
 end
 
 -- check wall coll
 if hit(p.x+p.dx,p.y,7,7,1) then
  player.dx=0
 end
  
 -- check ground coll
 if hit(p.x,p.y+p.dy,7,7,1) then
  if p.dy>0 then
   p.on_ground=true
  end
   p.dy=0        
 end
 
 -- decel if on ground
 if p.on_ground then
  p.dx=p.dx*0.95
  p.jump=0
 end
 
 -- max acceleration
 if p.dx > max_speed then
  p.dx = max_speed
 end
 
 -- update forward/ upward motion 
 p.y=p.y+p.dy
 p.x=p.x+p.dx
 
 -- move evil wall
 wall.x = wall.x + wall.dx
 if (p.x - wall.x > 64 or wall.x > p.x) then
  wall.x = p.x - 64
 end
 
 -- update score
 p.dist = p.dist + p.dx
 
 -- reset to beginning
 -- generate more map
 if p.x >= (127-12)*8 then
  p.x = 24
  needs_missing_map = true
  gen_map()
 end
 if needs_missing_map and p.x >= (36-12)*8 then
  gen_missing_map()
  needs_missing_map = false
 end
end
