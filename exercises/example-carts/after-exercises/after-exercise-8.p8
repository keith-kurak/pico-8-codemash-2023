function gen_map(init)
 -- set flat space at begin
 if (init) then
 	for i=0,15 do
			set_map_x(1,i)
		end
 end
	-- set variable space
	for i=16,111 do
	 local flr_hgt = gen_floor_height()
	 set_map_x(flr_hgt,i)
	 if (flr_hgt > 1 and has_thorns()) then
			mset(i,15-flr_hgt,20)
		end
 end
end

function gen_missing_map()
 for i=0,15 do
  local flr_hgt = gen_floor_height()
		set_map_x(flr_hgt,i)
		set_map_x(flr_hgt,i+112)
	end
end

function gen_floor_height()
 -- negative = no floor
	return min(rnd(8)-2, 4)
end

function has_thorns()
	return rnd(100)-90 > 0
end

-- set a single space on map
function set_map_x(flr_hgt,x)
	-- clear
	for j=0,17 do
  mset(x,j,24)
 end
 for j=0,flr_hgt do
  -- negative nums make no floors
		mset(x,15-j,16)
		-- animation map swap
		mset(x,16,16)
	end
	-- make lava
	if flr_hgt < 1 then
	 mset(x,15,18)
	 -- animation map swap
	 mset(x,16,19)
	end
end
